@page
@model EventApp.Pages.MyEventsModel

@{
    ViewData["Title"] = "MyEvents";
}

<h1>MyEvents</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.SpotsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Event.Organizer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Events) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.SpotsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Organizer.Name)
            </td>
        </tr>
}
    </tbody>
</table>
